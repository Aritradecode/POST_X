<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= user.username %>'s Profile | POST_X
  </title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-950 text-white font-sans min-h-screen">

  <div class="max-w-6xl mx-auto px-4 py-10">

    <!-- Profile Card -->
    <div class="bg-gray-900 rounded-xl p-6 shadow-xl flex flex-col md:flex-row items-center md:items-start gap-6">
      <img src="<%= user.profilePic %>" alt="Profile Picture"
        class="w-32 h-32 rounded-full object-cover border-4 border-blue-500">
      <div>
        <h2 class="text-4xl font-extrabold text-blue-400">
          <%= user.username %>
        </h2>
        <p class="text-gray-400 italic mt-2">
          <%= user.bio || 'No bio added yet.' %>
        </p>
        <div class="flex gap-6 mt-4 text-gray-300 text-sm">
          <span><strong class="text-white">
              <%= user.followers.length %>
            </strong> Followers</span>
          <span><strong class="text-white">
              <%= user.following.length %>
            </strong> Following</span>
        </div>
        <a href="/users/edit" class="inline-block mt-4 text-blue-400 hover:underline transition duration-200">Edit
          Profile</a>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-4 mt-8">
      <a href="/posts/create"
        class="bg-yellow-400 text-black px-6 py-3 font-semibold rounded-md hover:bg-yellow-300 transition duration-200">+
        Create Post</a>
      <a href="/explore"
        class="bg-blue-600 text-white px-6 py-3 font-semibold rounded-md hover:bg-blue-700 transition duration-200">üåç
        Explore</a>
    </div>

    <hr class="my-10 border-gray-700" />

    <!-- Posts -->
    <h3 class="text-3xl font-bold text-white mb-6">Your Posts</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% posts.forEach(post=> { %>
        <div class="bg-gray-800 p-4 rounded-xl shadow">
          <% if (post.mediaType==='image' ) { %>
            <img src="<%= post.mediaUrl %>" alt="Post Image" class="w-full h-48 object-cover rounded" />
            <% } else if (post.mediaType==='video' ) { %>
              <video controls class="w-full h-48 rounded">
                <source src="<%= post.mediaUrl %>" type="video/mp4" />
                Your browser does not support the video tag.
              </video>
              <% } %>

                <p class="mt-3 text-gray-200">
                  <%= post.caption %>
                </p>

                <div class="flex justify-between text-sm text-gray-400 mb-2">
                  <form action="/posts/<%= post._id %>/like" method="POST">
                    <button type="submit" class="hover:text-red-400 transition">‚ù§Ô∏è <%= post.likes.length %></button>
                  </form>
    
                  <button onclick="toggleComments('<%= post._id %>')" class="hover:text-green-400 transition">
                    üí¨ <%= post.comments.length %> Comments
                  </button>
                </div>

                  <!-- Comment Section -->
            <div id="comments-<%= post._id %>" class="hidden mt-3">
              <% post.comments.forEach(comment => { %>
                <div class="bg-gray-700 p-2 rounded mb-1">
                  <span class="font-semibold text-yellow-300">@<%= comment.user.username %>:</span>
                  <span><%= comment.text %></span>
                </div>
              <% }) %>

              <form action="/posts/<%= post._id %>/comment" method="POST" class="mt-2">
                <input type="text" name="text" placeholder="Add a comment..."
                  class="w-full px-3 py-2 bg-gray-600 text-white rounded focus:outline-none focus:ring-2 focus:ring-purple-400" required />
                <button type="submit"
                  class="mt-2 w-full bg-green-600 hover:bg-green-700 text-sm py-2 rounded transition">Post</button>
              </form>
            </div>
                  <% if (post.author.toString()===user._id.toString()) { %>
                    <div class="flex gap-2">
                      <form action="/posts/<%= post._id %>/delete" method="POST"
                        onsubmit="return confirm('Delete this post?')">
                        <button class="bg-red-500 px-3 py-1 rounded text-white text-sm hover:bg-red-600">Delete</button>
                      </form>
                      <a href="/posts/<%= post._id %>/edit"
                        class="bg-blue-500 px-3 py-1 rounded text-white text-sm hover:bg-blue-600">Edit</a>
                    </div>
                    <% } %>
                </div>

                <p class="text-xs text-gray-500 mt-2">Posted on: <%= post.createdAt.toDateString() %>
                </p>
        </div>
        <% }) %>
    </div>
    <script>
      function toggleComments(postId) {
        const el = document.getElementById('comments-' + postId);
        el.classList.toggle('hidden');
      }
    </script>

</body>

</html>