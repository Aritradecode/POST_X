<!-- views/editProfile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen flex justify-center items-center">
  <form action="/users/edit" method="POST" enctype="multipart/form-data" class="bg-gray-800 p-6 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold mb-4">Edit Your Profile</h2>

    <label class="block mb-2">Bio</label>
    <textarea name="bio" class="w-full p-2 rounded bg-gray-700 text-white" rows="3"><%= user.bio %></textarea>

    <label class="block mt-4 mb-2">Profile Picture</label>
    <input type="file" name="profilePic" accept="image/*" class="block w-full text-white bg-gray-700 p-2 rounded">

    <button type="submit" class="mt-6 bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded">Save Changes</button>
  </form>
</body>
</html>
